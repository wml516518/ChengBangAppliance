@model Category
@{
    ViewData["Title"] = Model.Id == 0 ? "添加分类" : "编辑分类";
}
<div class="card" style="max-width: 400px;">
    <h2>@ViewData["Title"]</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name">分类名称</label>
            <input asp-for="Name" placeholder="如：空调、洗衣机、冰箱" />
        </div>
        <div class="form-group">
            <label asp-for="SortOrder">排序</label>
            <input asp-for="SortOrder" type="number" />
            <span style="font-size:12px; color:#6b7280;">数字越小越靠前</span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">保存</button>
        <a href="/Categories" class="btn btn-secondary">取消</a>
    </form>
</div>
