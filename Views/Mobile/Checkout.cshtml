@{
    ViewData["Title"] = "确认订单";
    var product = ViewBag.Product as Product;
    var quantity = (int)(ViewBag.Quantity ?? 1);
    var total = (decimal)(ViewBag.Total ?? 0m);
}
@if (product == null)
{
    <p>商品不存在或已下架</p>
    <a href="/Mobile" class="btn btn-secondary">返回首页</a>
}
else
{
<div class="card" style="padding:16px;">
    <div style="font-weight:600; margin-bottom:12px;">商品信息</div>
    <div style="display:flex; gap:12px;">
        @if (!string.IsNullOrEmpty(product.ImagePath))
        { <img src="@product.ImagePath" alt="" style="width:80px; height:80px; object-fit:cover; border-radius:8px;" /> }
        <div style="flex:1; min-width:0;">
            <div style="font-weight:600;">@product.Name</div>
            <div style="color:#2563eb;">¥@product.Price.ToString("F2") × @quantity = ¥@total.ToString("F2")</div>
        </div>
    </div>
</div>
<form asp-action="SubmitOrder" method="post">
    <input type="hidden" name="productId" value="@product.Id" />
    <input type="hidden" name="quantity" value="@quantity" />
    <div class="form-group">
        <label>联系人 *</label>
        <input type="text" name="contactName" value="@ViewBag.ContactName" required placeholder="请输入姓名" />
    </div>
    <div class="form-group">
        <label>联系电话 *</label>
        <input type="tel" name="contactPhone" value="@ViewBag.ContactPhone" required placeholder="请输入手机号" />
    </div>
    <div class="form-group">
        <label>支付方式 *</label>
        <div style="display:flex; gap:12px; flex-wrap:wrap;">
            <label style="display:flex; align-items:center; gap:8px; padding:12px 20px; border:2px solid #e5e7eb; border-radius:10px; cursor:pointer; margin:0;">
                <input type="radio" name="paymentMethod" value="1" required style="width:20px; height:20px;" />
                <span>微信支付</span>
            </label>
            <label style="display:flex; align-items:center; gap:8px; padding:12px 20px; border:2px solid #e5e7eb; border-radius:10px; cursor:pointer; margin:0;">
                <input type="radio" name="paymentMethod" value="2" style="width:20px; height:20px;" />
                <span>支付宝</span>
            </label>
        </div>
    </div>
    <div class="form-group">
        <label>服务地址</label>
        <input type="text" name="address" placeholder="维修/送货地址（选填）" />
    </div>
    <div class="form-group">
        <label>备注</label>
        <textarea name="remark" rows="2" placeholder="其他说明（选填）"></textarea>
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">提交订单</button>
</form>
<a href="/Mobile/Detail/@product.Id" class="btn btn-secondary" style="margin-top:12px; display:block; text-align:center;">返回商品</a>
}
