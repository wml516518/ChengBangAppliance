@{
    ViewData["Title"] = "下单成功";
    var order = ViewBag.Order as Order;
}
<div class="card" style="padding:24px; text-align:center;">
    <p style="font-size:18px; font-weight:600; color:#16a34a;">下单成功</p>
    @if (order != null)
    {
        <p>订单号：<strong>@order.OrderNo</strong></p>
        <p style="color:#6b7280; font-size:14px;">支付方式：@(order.PaymentMethod == 1 ? "微信支付" : order.PaymentMethod == 2 ? "支付宝" : "-")</p>
        <a href="/Mobile/OrderDetail/@order.Id" class="btn btn-primary" style="margin-top:12px;">查看订单</a>
    }
</div>
<a href="/Mobile" class="btn btn-secondary" style="display:block; text-align:center;">返回首页</a>
