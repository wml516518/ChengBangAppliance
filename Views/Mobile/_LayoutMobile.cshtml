<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - 诚邦家电</title>
    <style>
        * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Microsoft YaHei", sans-serif; margin: 0; padding: 0; background: #f2f2f2; font-size: 14px; }
        .m-header { background: #2563eb; color: #fff; padding: 12px 16px; position: sticky; top: 0; z-index: 10; }
        .m-header h1 { margin: 0; font-size: 18px; font-weight: 600; }
        .m-nav { display: flex; background: #fff; border-top: 1px solid #e5e7eb; position: fixed; bottom: 0; left: 0; right: 0; z-index: 10; }
        .m-nav a { flex: 1; text-align: center; padding: 10px 8px; color: #6b7280; text-decoration: none; font-size: 12px; }
        .m-nav a.active { color: #2563eb; font-weight: 600; }
        .m-main { padding: 12px; padding-bottom: 60px; min-height: 100vh; }
        .btn { display: inline-block; padding: 12px 20px; border-radius: 8px; border: none; cursor: pointer; text-decoration: none; font-size: 16px; text-align: center; min-height: 44px; line-height: 20px; }
        .btn-primary { background: #2563eb; color: #fff; width: 100%; }
        .btn-secondary { background: #e5e7eb; color: #374151; }
        .card { background: #fff; border-radius: 10px; margin-bottom: 12px; overflow: hidden; box-shadow: 0 1px 3px rgba(0,0,0,.08); }
        .alert { padding: 12px; border-radius: 8px; margin-bottom: 12px; }
        .alert-success { background: #dcfce7; color: #166534; }
        .alert-danger { background: #fee2e2; color: #991b1b; }
        input, textarea { font-size: 16px !important; padding: 12px; border: 1px solid #d1d5db; border-radius: 8px; width: 100%; }
        label { display: block; margin-bottom: 6px; font-weight: 500; color: #374151; }
        .form-group { margin-bottom: 16px; }
    </style>
</head>
<body>
    <header class="m-header">
        <h1>@(ViewData["Title"] ?? "诚邦家电")</h1>
    </header>
    <main class="m-main">
        @if (TempData["Success"] != null) { <div class="alert alert-success">@TempData["Success"]</div> }
        @if (TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }
        @RenderBody()
    </main>
    <nav class="m-nav">
        <a href="/Mobile">首页</a>
        @if (User.Identity?.IsAuthenticated == true)
        { <a href="/Mobile/MyOrders">我的订单</a> }
        else
        { <a href="/Account/Login?returnUrl=/Mobile/MyOrders">登录</a> }
    </nav>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
