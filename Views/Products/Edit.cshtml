@model ProductEditViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "添加商品" : "编辑商品";
}
<div class="card" style="max-width: 500px;">
    <h2>@ViewData["Title"]</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>商品照片</label>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="current-photo">
                    <img src="@Model.ImagePath" alt="当前图片" style="max-width:200px; max-height:150px; border:1px solid #e5e7eb; border-radius:6px;" />
                    <p style="font-size:12px; color:#6b7280;">当前图片，上传新文件将替换</p>
                </div>
            }
            <input type="file" name="image" accept="image/jpeg,image/png,image/gif,image/webp" />
            <span class="text-danger" style="font-size:12px;">支持 jpg、png、gif、webp，选填</span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category">分类</label>
            <select asp-for="Category" style="max-width:400px; padding:8px; border:1px solid #d1d5db; border-radius:4px;">
                <option value="">请选择分类</option>
                @foreach (var c in (ViewBag.Categories as List<Category>) ?? new List<Category>())
                {
                    <option value="@c.Name">@c.Name</option>
                }
            </select>
        </div>
        <div class="form-group checkbox">
            <input asp-for="IsOnSale" />
            <label asp-for="IsOnSale"></label>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">保存</button>
        <a href="/Products/Manage" class="btn btn-secondary">取消</a>
    </form>
</div>
