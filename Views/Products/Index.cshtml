@model List<Product>
@{
    ViewData["Title"] = "商品列表";
}
<div class="card">
    <h2>商品列表</h2>
    <p>
        <a href="?onSaleOnly=true" class="btn btn-primary">仅看上架</a>
        <a href="?" class="btn btn-secondary">全部</a>
    </p>
    @if (Model.Count == 0)
    {
        <p>暂无商品。</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>图片</th>
                    <th>名称</th>
                    <th>分类</th>
                    <th>价格</th>
                    <th>状态</th>
                    <th>描述</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(p.ImagePath))
                            { <img src="@p.ImagePath" alt="" style="max-width:60px; max-height:60px; object-fit:cover; border-radius:4px;" /> }
                            else
                            { <span style="color:#9ca3af;">—</span> }
                        </td>
                        <td>@p.Name</td>
                        <td>@(p.Category ?? "-")</td>
                        <td>¥@p.Price.ToString("F2")</td>
                        <td>
                            @if (p.IsOnSale)
                            { <span class="badge badge-success">上架</span> }
                            else
                            { <span class="badge badge-secondary">下架</span> }
                        </td>
                        <td>@(p.Description != null && p.Description.Length > 30 ? p.Description[..30] + "…" : p.Description)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
