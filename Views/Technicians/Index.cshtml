@model List<User>
@using ApplianceRepair.Services
@{
    ViewData["Title"] = "用户管理";
    var allNonTech = ViewBag.AllUsers as List<User> ?? new List<User>();
}
<div class="card">
    <div style="display:flex; justify-content:space-between; align-items:center; flex-wrap:wrap; gap:8px;">
        <h2 style="margin:0;">用户管理</h2>
        <a href="/Technicians/CreateTechnician" class="btn btn-primary">添加用户</a>
    </div>

    @if (allNonTech.Count > 0)
    {
        <div style="margin-top:16px; padding:12px; background:#f0f9ff; border-radius:6px;">
            <strong>从已有用户中设为师傅：</strong>
            <form asp-action="SetTechnician" method="post" style="display:inline-flex; align-items:center; gap:8px; margin-top:8px;">
                @Html.AntiForgeryToken()
                <select name="userId" style="padding:6px;border:1px solid #d1d5db;border-radius:4px;">
                    @foreach (var u in allNonTech)
                    {
                        <option value="@u.Id">@(u.RealName ?? u.UserName) @(string.IsNullOrEmpty(u.Phone) ? "" : $"({u.Phone})")</option>
                    }
                </select>
                <button type="submit" class="btn btn-primary btn-sm">设为师傅</button>
            </form>
        </div>
    }

    <div style="margin-top:16px;">
        @if (Model.Count == 0)
        {
            <p>暂无用户，请先添加。</p>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>用户名</th>
                        <th>姓名</th>
                        <th>电话</th>
                        <th>角色</th>
                        <th>注册时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.UserName</td>
                            <td>@(u.RealName ?? "—")</td>
                            <td>@(u.Phone ?? "—")</td>
                            <td>
                                @{
                                    var roleName = AuthService.GetRoleName(u);
                                    var badgeClass = roleName == "管理员" ? "badge-danger" : (roleName == "师傅" ? "badge-success" : "badge-secondary");
                                }
                                <span class="badge @badgeClass">@roleName</span>
                            </td>
                            <td style="font-size:13px;">@u.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <a href="/Technicians/Edit/@u.Id" class="btn btn-primary btn-sm">编辑</a>
                                @if (u.IsTechnician)
                                {
                                    <form asp-action="RemoveTechnician" method="post" style="display:inline;" onsubmit="return confirm('确定取消该用户的师傅身份？');">
                                        <input type="hidden" name="userId" value="@u.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm">移除师傅</button>
                                    </form>
                                }
                                else if (!u.IsAdmin)
                                {
                                    <form asp-action="SetTechnician" method="post" style="display:inline;">
                                        <input type="hidden" name="userId" value="@u.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary btn-sm">设为师傅</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
